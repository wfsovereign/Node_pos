<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <script src="lib/underscore.js"></script>
    <link href="dist/css/bootstrap-theme.css" rel="stylesheet">
    <link href="dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="dist/js/jquery.js"></script>
    <script src="dist/js/bootstrap.min.js"></script>




    <title></title>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div>
            <ul class="nav navbar-nav navbar-left">
                <li><a href="#"> Let's Go </a></li>
                <li ><a href="/"> 主页 </a></li>
                <li><a href="itemslist"> 商品列表 </a></li>
            </ul>
        </div>
        <div>
            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a > <span class="glyphicon glyphicon-shopping-cart"></span> 购物车(
                    <span class="shopcart_num">
                    0
                    </span>

                    ) </a> </li>
            </ul>
        </div>
    </div>
</nav>
<br>
<br>
<br>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>购物清单</h2>
        </div>
        <div class="panel-body">
            <table class="table table-bordered text-center">
                <thead class="items_list">
                <tr>
                    <td class='col-md-1'>分类</td>
                    <td class='col-md-2'>名称</td>
                    <td class='col-md-2'>单价（元）</td>
                    <td class='col-md-1'>单位</td>
                    <td class='col-md-3'>数量</td>
                    <td class='col-md-4'>小计</td>
                </tr>
                </thead>

                <tbody>
                <% items.forEach(function(item, index){ %>
                <tr>
                    <td><%= item.category %></td>
                    <td><%= item.name %></td>
                    <td><%= item.price %></td>
                    <td><%= item.unit %></td>
                    <td><%= item.count %></td>
                    <td><%= item.subtotal %></td>
                </tr>
                <% }); %>
                </tbody>
            </table>

        </div>
    </div>

</div>


<br>
<div class="subtotal container" align="right" ></div>
<div class="payment container " align="right" >
    <a href="details"><button class='btn btn-primary btn-lg' >付款</button></a>
</div>


</body>
</html>