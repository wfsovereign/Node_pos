<!DOCTYPE html>
<html>

<head lang="en">
    <meta charset="UTF-8">
    <link href="dist/css/bootstrap-theme.css" rel="stylesheet">
    <link href="dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="dist/js/jquery.js"></script>
    <script src="dist/js/bootstrap.min.js"></script>

    <title></title>
</head>

<body>
<div class="container">
    <div class="panel panel-default ">
        <div class="panel-heading">
            <h1 style="text-align: center;color: #e3a625"> 后台管理(Root)</h1>
        </div>
    </div>

    <div class="panel-body">
        <article>
            <% if (success) { %>
            <div><%= success %></div>
            <% } %>
            <% if (error) { %>
            <div><%= error %> </div>
            <% } %>
        </article>



        <form method="post">

            <table class="table table-bordered text-center">
                <thead class="items_list">
                <tr>
                    <td class='col-md-3'>折扣类型</td>
                    <td class='col-md-2'>商品条码</td>


                </tr>
                </thead>
                <tbody>
                <tr>
                    <td><input type="text" id="promotion_type" name="promotion_type"></td>
                    <td><input type="text" id="barcode" name="barcode"></td>

                </tr>
                <tr>
                    <td colspan="5"><input type="submit" class="btn btn-default btn-primary btn-lg btn-block "
                                           value="添加该条码"></td>
                </tr>
                </tbody>
            </table>
        </form>


    </div>
    <div class="panel-body">
        <table class="table table-bordered text-center">
            <thead class="items_list">
            <h3 style="color: #00B7FF;text-align: center">数据库商品列表</h3>
            <tr>
                <td class='col-md-3'>折扣类型</td>
                <td class='col-md-4'>分商品条码</td>

            </tr>
            </thead>
            <tbody>

            <tr>
                <% if(promotion){promotion.forEach(function(item,index){%>
                <td><%= item.type %></td>

                <td><%= item.barcode%></td>

            </tr>
            <%})};%>
            </tbody>
        </table>
    </div>
</div>

