<!DOCTYPE html>
<html>

<head lang="en">
    <meta charset="UTF-8">
    <link href="dist/css/bootstrap-theme.css" rel="stylesheet">
    <link href="dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="lib/underscore.js"></script>
    <script src="function/js.js"></script>
    <title></title>
</head>

<body>
<div class="container">
    <div class="panel panel-default ">
        <div class="panel-heading">
            <h1 style="text-align: center;color: #e3a625"> 后台管理(Root)</h1>
        </div>
    </div>

    <div class="panel-body">
        <article>
            <% if (success) { %>
            <div><%= success %></div>
            <% } %>
            <% if (error) { %>
            <div><%= error %> </div>
            <% } %>
        </article>
        <form method="post">

            <table class="table table-bordered text-center">
                <thead class="items_list">
                <tr>
                    <td class='col-md-3'>条码</td>
                    <td class='col-md-2'>分类</td>
                    <td class='col-md-2'>名称</td>
                    <td class='col-md-2'>单价（元）</td>
                    <td class='col-md-1'>单位</td>

                </tr>
                </thead>
                <tbody>
                <tr>
                    <td><input type="text" id="barcode" name="barcode"></td>
                    <td><input type="text" id="category" name="category"></td>
                    <td><input type="text" id="name" name="name"></td>
                    <td><input type="text" id="price" name="price"></td>
                    <td><input type="text" id="unit" name="unit"></td>
                </tr>
                <tr>
                    <td colspan="5"><input type="submit" class="btn btn-default btn-primary btn-lg btn-block "
                                           value="添加该商品"></td>
                </tr>
                </tbody>
            </table>
        </form>
    </div>
    <div class="panel-body">
        <table class="table table-bordered text-center">
            <thead class="items_list">
            <h3 style="color: #00B7FF;text-align: center">数据库商品列表</h3>
            <tr>
                <td class='col-md-3'>条码</td>
                <td class='col-md-2'>分类</td>
                <td class='col-md-2'>名称</td>
                <td class='col-md-2'>单价（元）</td>
                <td class='col-md-1'>单位</td>
            </tr>
            </thead>
            <tbody>
            <% items.forEach(function(item,index){%>
            <tr>
                <td><%= item.barcode%></td>
                <td><%= item.category%></td>
                <td><%= item.name%></td>
                <td><%= item.price%></td>
                <td><%= item.unit%></td>
            </tr>
            <%});%>
            </tbody>
        </table>
    </div>
</div>

